<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a2"
    tools:context="com.example.bana.pocketmoneymanager.spend"
    android:id="@+id/relativeLayout1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#29fffc"
        android:background="#27ff43"
        android:id="@+id/mainlayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/spendtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff08d3"
            android:textStyle="bold"
            android:backgroundTint="#4c3dff"
            android:text="spends"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/icon" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="290dp"
            android:src="@drawable/icon" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spend Amount"
        android:textSize="25dp"
        android:id="@+id/samount"
        android:height="30dp"
        android:layout_below="@+id/mainlayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:textColor="#ff0bab" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:layout_below="@+id/samount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:height="60dp"
        android:width="200dp"
        android:layout_marginLeft="15dp"
        android:hint="Rs"
        android:background="#fbffc0"
        android:maxLines="1"
        android:inputType="number"
        android:textSize="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textColor="#ff0bab"
        android:text="Spend On"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"
        android:height="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spendon"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:height="40dp"
        android:layout_marginLeft="15dp"
        android:width="200dp"
        android:hint="Description"
        android:background="#fbffc0"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Update"
        android:textSize="30dp"
        android:width="180dp"
        android:height="30dp"
        android:background="#2bff49"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
